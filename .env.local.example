# Local database (Docker postgres)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/cryptovest

# Required for signed session cookies (use 32+ random chars)
SESSION_SECRET=change-me-to-a-long-random-secret-32-chars-min
# Optional override for session cookie Secure flag.
# true  = always secure (HTTPS only)
# false = allow over HTTP (useful behind misconfigured proxy / local test)
# SESSION_COOKIE_SECURE=false

# Optional (only needed if you still use Supabase client helpers elsewhere)
# NEXT_PUBLIC_SUPABASE_URL=
# NEXT_PUBLIC_SUPABASE_ANON_KEY=
# SUPABASE_SERVICE_ROLE_KEY=
